<Window x:Class="grubmod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:grubmod"
        Title="grubmod"
        Height="1080" Width="1920"
        Background="#000000" Foreground="White"
        FontSize="14.5"
        FontFamily="JetBrains Mono"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <DataTemplate x:Key="ComboTemplate">
            <ComboBox ItemsSource="{Binding Fields.VarValues}"
                  SelectedItem="{Binding VarSelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DataTemplate>

        <DataTemplate x:Key="TextTemplate">
            <TextBox Text="{Binding VarSelectedValue, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
        </DataTemplate>

        <DataTemplate x:Key="CheckBoxTemplate">
            <CheckBox IsChecked="{Binding VarSelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DataTemplate>

        <local:ComboOrTextTemplateSelector x:Key="ComboOrTextSelector"
                                       ComboTemplate="{StaticResource ComboTemplate}"
                                       TextTemplate="{StaticResource TextTemplate}"
                                       CheckBoxTemplate="{StaticResource CheckBoxTemplate}"/>

        <Style TargetType="ListView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="4"/>
                        <Setter Property="Background" Value="#000000"/>
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="White"></Setter>
            <Setter Property="BorderThickness" Value="2"></Setter>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="Transparent" Padding="4,2">
                            <ContentPresenter 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                    Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter
                        x:Name="ContentSite"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#222222"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <TabControl Background="#000000" Foreground="White">
        <TabItem Header="Main" Foreground="White" Background="#000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="100 15 40 0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="25"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="25"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1">
                        <RadioButton x:Name="parametrRadioButton" Height="30" Content="Parametr" IsChecked="True" Background="#000000" Foreground="White" GroupName="SearchMode" Margin="0 0 10 0"/>
                        <RadioButton Height="30" Content="Description" Background="#000000" Foreground="White" GroupName="SearchMode" Margin="0 0 25 0"/>

                        <Button Content="Google" MinWidth="100" Height="30" Margin="0 0 5 0" Background="#000000" Foreground="White" BorderBrush="#222222" Click="GoogleButton_Click"/>
                        <Button Content="Clear" MinWidth="100" Height="30" Margin="0 0 5 0" Background="#000000" Foreground="White" BorderBrush="#222222" Click="ClearButton_Click"/>
                        <Button Content="Search" MinWidth="100" Height="30" Margin="0 0 5 0" Background="#000000" Foreground="White" BorderBrush="#222222" Click="AsyncSearchButton_Click"/>
                    </StackPanel>

                    <TextBox x:Name="searchBox" Margin="0 0 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Center"
   MinWidth="500"
   Grid.Column="3"
   Height="30"
   Padding="5"
   Background="#111111"
   Foreground="#333333"
   Text="Search.."
   BorderBrush="#222222"
   BorderThickness="1"
   GotFocus="SearchBoxGotFocus"
   LostFocus="SearchBoxLostFocus"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="5">
                        <CheckBox Width="30" Height="30" Checked="MatchCase_Checked" Unchecked="MatchCase_Unchecked"/>
                        <TextBlock Foreground="White" Height="30" Text="Match case" Margin="0 0 20 0"/>

                        <TextBlock Margin="5 0 10 0" Foreground="White" Height="30" Text="Set all to:"/>
                        <ComboBox x:Name="SetToAllComboBox" Foreground="White" Background="Black" Height="30" MinWidth="150" Margin="0 0 10 0"/>
                        <Button MinWidth="100" Content="Apply" Foreground ="White" Background="#000000" BorderBrush="#222222" Click="ApplyToAll_Click"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <ListView x:Name="optionsListView" BorderThickness="2" BorderBrush="White" Margin="10" Background="#000000" Foreground="White">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="VarName" Width="500"
                            DisplayMemberBinding="{Binding Fields.VarName}" />
                                <GridViewColumn Header="VarOffset" Width="100"
                            DisplayMemberBinding="{Binding Fields.VarOffset}" />
                                <GridViewColumn Header="VarStoreId" Width="100"
                            DisplayMemberBinding="{Binding Fields.VarStoreId}" />
                                <GridViewColumn Header="VarSectionName" Width="150"
                            DisplayMemberBinding="{Binding Fields.VarSectionName}" />
                                <GridViewColumn Header="Values" Width="200" CellTemplateSelector="{StaticResource ComboOrTextSelector}"/>

                                <GridViewColumn Header="BIOS Default">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Fields.VarBIOSDefaultValue}" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Description">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Fields.VarDescription}" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"></RowDefinition>
                        <RowDefinition Height="0.5*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="1050"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <Button Margin="10" Height="40" MinWidth="150" Content="Load config" BorderBrush="#222222" Foreground ="White" Background="#000000" Click="LoadConfig_Click"/>
                        <Button Height="40" MinWidth="150" Content="Export script" BorderBrush="#222222" Foreground ="White" Background="#000000" Click="ExportScript_Click"/>
                    </StackPanel>

                    <StackPanel  Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right"  >
                        <Button Margin="10" MinWidth="150" Height="40" Content="Build config" BorderBrush="#222222" Foreground ="White" Background="#000000" Click="BuildConfig_Click"/>
                        <Button MinWidth="150" Height="40" Content="Import file" BorderBrush="#222222" Foreground ="White" Background="#000000" Click="ImportFile_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <RadioButton x:Name="ShowAllOptions" Margin="10"  IsChecked="True" GroupName="ShowGroupOfOptions" Height="30" Content="Show all options" Background="#000000" Foreground="White" Checked="ShowAllOptions_Checked" />
                        <RadioButton x:Name="ShowAllNumericOptions" Margin="10"  Height="30" GroupName="ShowGroupOfOptions" Content="Show all numeric options" Background="#000000" Foreground="White"  Checked="ShowAllNumericOptions_Checked"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                        <RadioButton  x:Name="ShowAllNormalOptions" Margin="10"  Height="30" GroupName="ShowGroupOfOptions" Content="Show all normal options" Background="#000000" Foreground="White" Checked="ShowAllNormalOptions_Checked"/>
                        <RadioButton  x:Name="ShowAllCheckBoxOptions" Margin="10"  Height="30" GroupName="ShowGroupOfOptions" Content="Show all checkbox options" Background="#000000" Foreground="White" Checked="ShowAllCheckBoxOptions_Checked"/>
                    </StackPanel>

                </Grid>
            </Grid>
        </TabItem>

        <TabItem Header="Options" Foreground="White" Background="#000000">
            <Grid Background="#000000">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                   Foreground="White"
                   Text="Show:" Margin="10"/>

                <StackPanel Margin="10 0 10 10" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
                    <CheckBox Foreground="White" Content="Description" Margin="0,5" Checked="ShowDescription_Checked" Unchecked="ShowDescription_Unchecked"/>
                    <CheckBox Foreground="White" Content="BIOS Default value" Margin="0,5" Checked="ShowBIOSDefaultValue_Checked" Unchecked="ShowBIOSDefaultValue_Unchecked"/>
                    <CheckBox Foreground="White" Content="VarStoreId" Margin="0,5" Checked="ShowVarStoreId_Checked" Unchecked="ShowVarStoreId_Unchecked"/>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Header="About" Foreground="White" Background="#000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Margin="10,10,0,0" Text="grubmod" Foreground="White"
                           HorizontalAlignment="Left" VerticalAlignment="Top"
                           FontSize="18" FontWeight="Bold"/>

                <TextBlock Grid.Row="1" Margin="10 5 0 0"><Hyperlink NavigateUri="https://github.com/NZK95" RequestNavigate="AuthorLink">github.com/NZK95</Hyperlink></TextBlock>
                <TextBlock Grid.Row="2" Margin="10"><Hyperlink NavigateUri="https://github.com/NZK95/grubmod" RequestNavigate="GrubmodLink">github.com/NZK95/grubmod</Hyperlink></TextBlock>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
